<h1>
  Add a new topic
</h1>


<hr>

<!-- Form topic start -->
<form action="/create_topic" method="post">
<!-- Form topic end -->

  <!-- Label and input for topic start -->
  <div class="form-group">
    <label for="topic">
      Topic
    </label>

    <!-- Input for topic start -->
    <input type="text" id="topic" name="topic" class="form-control">
    <!-- Input for topic end -->
  </div>
  <!-- Label and input for topic end -->

  <button class="btn btn-block btn-outline-secondary">
    Create topic
  </button>
</form>

