<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All topics
    </h1>

    <a href="/topics/new" class="btn btn-block btn-outline-secondary">
      Add a new topic
    </a>
  </div>
</div>

<!-- Ransack Code start -->
<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "topic_templates/topics_search_form" %>
  </div>
</div>
<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Topic
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @topics.each do |topic| %>
      <tr>
        <!-- Display topic.id start -->
        <td>
          <%= topic.id %>
        </td>
        <!-- Display topic.id end -->

        <!-- Display topic.topic start -->
        <td>
          <%= topic.topic %>
        </td>
        <!-- Display topic.topic end -->

        <!-- Display topic.created_at start -->
        <td>
          <%= time_ago_in_words(topic.created_at) %> ago
        </td>
        <!-- Display topic.created_at end -->

        <!-- Display topic.updated_at start -->
        <td>
          <%= time_ago_in_words(topic.updated_at) %> ago
        </td>
        <!-- Display topic.updated_at end -->

        <td>
          <a href="/topics/<%= topic.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @topics, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
