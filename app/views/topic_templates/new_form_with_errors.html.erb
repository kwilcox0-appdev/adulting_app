<% if @topic.present? %>
  <% if @topic.errors.any? %>
    <% @topic.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new topic
</h1>


<hr>

<form action="/create_topic" method="post">

  <div class="form-group">
    <label for="topic">
      Topic
    </label>

    <input type="text" id="topic" name="topic" class="form-control" value="<%= @topic.topic %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create topic
  </button>
</form>

<hr>

<a href="/topics">
  Go back
</a>
