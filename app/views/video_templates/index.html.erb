<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All videos
    </h1>

    <a href="/videos/new" class="btn btn-block btn-outline-secondary">
      Add a new video
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Title
        </th>

        <th>
          Description
        </th>

        <th>
          Length
        </th>

        <th>
          Difficulty
        </th>

        <th>
          Points
        </th>

        <th>
          Instructor
        </th>

        <th>
          Category
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @videos.each do |video| %>
      <tr>
        <!-- Display video.id start -->
        <td>
          <%= video.id %>
        </td>
        <!-- Display video.id end -->

        <!-- Display video.title start -->
        <td>
          <%= video.title %>
        </td>
        <!-- Display video.title end -->

        <!-- Display video.description start -->
        <td>
          <%= video.description %>
        </td>
        <!-- Display video.description end -->

        <!-- Display video.length start -->
        <td>
          <%= video.length %>
        </td>
        <!-- Display video.length end -->

        <!-- Display video.difficulty start -->
        <td>
          <%= video.difficulty %>
        </td>
        <!-- Display video.difficulty end -->

        <!-- Display video.points start -->
        <td>
          <%= video.points %>
        </td>
        <!-- Display video.points end -->

        <!-- Display video.instructor_id start -->
        <td>
          <%= video.instructor.name %>
        </td>
        <!-- Display video.instructor_id end -->

        <!-- Display video.category_id start -->
        <td>
          <%= video.category_id %>
        </td>
        <!-- Display video.category_id end -->

        <!-- Display video.created_at start -->
        <td>
          <%= time_ago_in_words(video.created_at) %> ago
        </td>
        <!-- Display video.created_at end -->

        <!-- Display video.updated_at start -->
        <td>
          <%= time_ago_in_words(video.updated_at) %> ago
        </td>
        <!-- Display video.updated_at end -->

        <td>
          <a href="/videos/<%= video.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
