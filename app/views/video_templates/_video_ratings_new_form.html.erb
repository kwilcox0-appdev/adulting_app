<!-- Form rating start -->
<form action="/create_rating_from_video" method="post">
<!-- Form rating end -->

  <!-- Label and input for score start -->
  <div class="form-group">
    <label for="score">
      Score
    </label>

    <!-- Input for score start -->
    <input type="text" id="score" name="score" class="form-control" value="<%= @rating.score %>">
    <!-- Input for score end -->
  </div>
  <!-- Label and input for score end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <!-- Input for user_id start -->
    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :created_at, @rating.user_id), :class => "form-control") %>
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <!-- Label and input for video_id start -->
  <!-- Input for video_id start -->
  <input type="hidden" name="video_id" value="<%= @video.id %>">
  <!-- Input for video_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create rating
  </button>
</form>
