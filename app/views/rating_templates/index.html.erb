<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All ratings
    </h1>

    <a href="/ratings/new" class="btn btn-block btn-outline-secondary">
      Add a new rating
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Score
        </th>

        <th>
          User
        </th>

        <th>
          Video
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @ratings.each do |rating| %>
      <tr>
        <!-- Display rating.id start -->
        <td>
          <%= rating.id %>
        </td>
        <!-- Display rating.id end -->

        <!-- Display rating.score start -->
        <td>
          <%= rating.score %>
        </td>
        <!-- Display rating.score end -->

        <!-- Display rating.user_id start -->
        <td>
          <%= rating.user.created_at %>
        </td>
        <!-- Display rating.user_id end -->

        <!-- Display rating.video_id start -->
        <td>
          <%= rating.video.title %>
        </td>
        <!-- Display rating.video_id end -->

        <!-- Display rating.created_at start -->
        <td>
          <%= time_ago_in_words(rating.created_at) %> ago
        </td>
        <!-- Display rating.created_at end -->

        <!-- Display rating.updated_at start -->
        <td>
          <%= time_ago_in_words(rating.updated_at) %> ago
        </td>
        <!-- Display rating.updated_at end -->

        <td>
          <a href="/ratings/<%= rating.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @ratings, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
