<h1>
  Edit instructor #<%= @instructor.id %>
</h1>

<hr>

<!-- Form instructor start -->
<form action="/update_instructor/<%= @instructor.id %>" method="post">
<!-- Form instructor end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control" value="<%= @instructor.name %>">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <!-- Label and input for image_url start -->
  <div class="form-group">
    <label for="image_url">
      Image url
    </label>

    <!-- Input for image_url start -->
    <input type="text" id="image_url" name="image_url" class="form-control" value="<%= @instructor.image_url %>">
    <!-- Input for image_url end -->
  </div>
  <!-- Label and input for image_url end -->

  <button class="btn btn-block btn-outline-secondary">
    Update instructor
  </button>
</form>

<hr>

<a href="/instructors">
  Go back
</a>
